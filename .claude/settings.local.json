{
  "cleanupPeriodDays": 365,
  "env": {
    "MAX_THINKING_TOKENS": "31999",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "false",
    "DISABLE_COST_WARNINGS": "true",
    "BASH_DEFAULT_TIMEOUT_MS": "120000"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "WebFetch(domain:**)",
      "Bash(pnpm:*)",
      "Bash(find:*)",
      "Bash(rg:*)",
      "Bash(grep:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(touch:*)",
      "Bash(ls:*)",
      "Bash(cp:*)",
      "Bash(tree:*)",
      "Bash(diff:*)",
      "Bash(cat:*)",
      "Bash(echo:*)",
      "Bash(cd:*)",
      "Bash(which:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(less:*)",
      "Bash(more:*)",
      "Bash(git mv:*)",
      "Bash(git add:*)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git pull:*)",
      "Bash(git fetch:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr edit:*)",
      "Read(./**)",
      "Edit(./**)",
      "mcp__ide__getDiagnostics",
      "mcp__ide__executeCode",
      "WebFetch(domain:github.com)",
      "Bash(actionlint:*)",
      "Bash(act:*)"
    ],
    "deny": [
      "Read(../**)",
      "Edit(../**)",
      "Bash(sudo:*)",
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf /*)",
      "Bash(sudo rm:*)",
      "Bash(rm -rf .git)",
      "Bash(rm -r /)",
      "Bash(rm -r ~)",
      "Bash(chmod 777:*)",
      "Bash(chown:*)",
      "Bash(git push:*)",
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)",
      "Bash(git commit --amend:*)",
      "Bash(git rebase:*)",
      "Bash(history -c)",
      "Write(/etc/**)",
      "Write(/usr/**)",
      "Write(/var/**)",
      "Write(/opt/**)",
      "Write(/bin/**)",
      "Write(/sbin/**)",
      "Edit(/etc/**)",
      "Edit(/usr/**)",
      "Edit(/var/**)",
      "Edit(/opt/**)",
      "Edit(/bin/**)",
      "Edit(/sbin/**)",
      "Read(.env*)",
      "Read(**/id_rsa*)",
      "Read(**/*token*)",
      "Read(**/*key*)",
      "Read(**/*secret*)",
      "Edit(**/id_rsa*)",
      "Edit(**/*token*)",
      "Edit(**/*key*)",
      "Edit(**/*secret*)",
      "Write(.env*)",
      "Write(**/id_rsa*)",
      "Write(**/*token*)",
      "Write(**/*key*)",
      "Write(**/*secret*)"
    ]
  },
  "model": "opus"
}